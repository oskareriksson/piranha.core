@model CoreWeb.Models.HomePage
@{
    ViewBag.Title = Model.Title;
}

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-6 col-sm-offset-1 col-sm-5">
      <h1>@Model.Title</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 text-center">
      <h2>@Model.SupportingText.Heading.Value</h2>
      <p>@Model.SupportingText.Content.Value</p>
    </div>
  </div>

    @Html.Raw(Model.Body.Value)

</div>
