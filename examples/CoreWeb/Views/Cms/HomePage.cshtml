@model CoreWeb.Models.HomePage
@{
    ViewBag.Title = Model.Title;
}

<main class="jumbotron">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-6 col-sm-offset-1 col-sm-5">
        <h1>@Model.HeroContent.Heading.Value</h1>
        <p>@Model.HeroContent.Content.Value</p>
      </div>
    </div>
  </div>
</main>

<article class="container-fluid text-center article">
  <div class="row">
    <div class="col-xs-12">
      <h2>@Model.ArticleContent.Heading.Value</h2>
      <p>@Model.ArticleContent.Content.Value</p>
    </div>
    <div class="col-xs-offset-1 col-xs-4 col-sm-offset-0 col-sm-3 tn-container">
      <img src="@Model.ArticleContent.Image1.Value" alt="Image 1" class="tn">
    </div>
    <div class="col-xs-offset-2 col-xs-4 col-sm-offset-0 col-sm-3 tn-container">
      <img src="@Model.ArticleContent.Image2.Value" alt="Image 2" class="tn">
    </div>
    <div class="col-xs-offset-1 col-xs-4 col-sm-offset-0 col-sm-3 tn-container">
      <img src="@Model.ArticleContent.Image3.Value" alt="Image 3" class="tn">
    </div>
    <div class="col-xs-offset-2 col-xs-4 col-sm-offset-0 col-sm-3 tn-container">
      <img src="@Model.ArticleContent.Image4.Value" alt="Image 4" class="tn">
    </div>
  </div>
</article>

    @Html.Raw(Model.Body.Value)

</div>
