  <div class="row">
    <div class="col-xs-12">
      <div class="herotext">
        <h1>@Model.HeroContent.Heading.Value</h1>
        <p>@Model.HeroContent.Content.Value</p>
      </div>
    </div>
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-5">
          <!--Potential JS data presentation goes here-->
        </div>
        <div class="col-xs-7">
          <h2>@Model.ArticleContent.Heading1.Value</h2>
          <p>@Model.ArticleContent.Content1.Value</p>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-7">
          <h2>@Model.ArticleContent.Heading2.Value</h2>
